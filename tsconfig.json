{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": ["*"],
            "@domain/*": ["modules/domain/*"],
            "@mobile/*": ["modules/Mobile/*"],
            "@spa/*": ["modules/Spa/*"],
            "@web/*": ["modules/Web/*"],
            "@config/*": ["config/*"]
        }
    },
    "include": [
        "src",
        "modules",
        "routes",
        "config"
    ]
}